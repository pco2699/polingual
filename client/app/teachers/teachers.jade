.container
  .row
    ul
     li.col-lg-3.col-md-3.col-sm-4.col-xs-6.tbox(ng-repeat='teacher in $ctrl.teachers')  
        a(ui-sref='teacherdetail({vteacher:teacher._id})') 
        .tname {{teacher.name}}
        .timg 
            img(src="{{teacher.facebook.picture.data.url}}")
        .tcount From: {{teacher.country}}
        .tlang Speak: {{teacher.language}}
        .rate ★★★★★
