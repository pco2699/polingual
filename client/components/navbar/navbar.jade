div.navbar.navbar-default.navbar-static-top(ng-controller='NavbarController')
  div.container
    div.navbar-header
      button.navbar-toggle(type='button', ng-click='nav.isCollapsed = !nav.isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Polingual

    div#navbar-main.navbar-collapse.collapse(uib-collapse='nav.isCollapsed')
      ul.nav.navbar-nav
        li(ng-repeat='item in nav.menu', ui-sref-active='active')
          a(ui-sref='{{item.state}}') {{item.title}}

        li(ng-if='nav.isLoggedIn()', ui-sref-active='active')
          a(ui-sref='member') Member

        li(ng-show='nav.isAdmin()', ui-sref-active='active')
          a(ui-sref='admin') Admin

      form.navbar-form.navbar-left(role='Search')
          .form-group
             label City
             input.form-control(type='text', name='city')

          .form-group
             label Gender
             select.form-control(name='gend', ng-model='gend', ng-options='gend.value as gend.name for gend in nav.genders')   

          .form-group
             label Languege
             select.form-control(name='lang', ng-model='lang', ng-options='lang.value as lang.name for lang in nav.langs')

          .form-group
             label Interest
             input.form-control(type='text', name='intr')

      ul.nav.navbar-nav.navbar-right
        li(ng-hide='nav.isLoggedIn()', ui-sref-active='active')
          a(ui-sref='signup') Sign up

        li(ng-hide='nav.isLoggedIn()', ui-sref-active='active')
          a(ui-sref='login') Login

        li(ng-show='nav.isLoggedIn()')
          p.navbar-text Hello {{ nav.getCurrentUser().name }}

        li(ng-show='nav.isLoggedIn()', ui-sref-active='active')
          a(ui-sref='settings')
            span.glyphicon.glyphicon-cog

        li(ng-show='nav.isLoggedIn()')
          a(ui-sref='logout') Logout
