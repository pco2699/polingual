div.navbar.navbar-default.navbar-static-top(ng-controller='NavbarController')
  div.container
    div.navbar-header
      button.navbar-toggle(type='button', ng-click='nav.isCollapsed = !nav.isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Polingual

    div#navbar-main.navbar-collapse.collapse(uib-collapse='nav.isCollapsed')
      ul.nav.navbar-nav
        li(ng-repeat='item in nav.menu', ui-sref-active='active')
          a(ui-sref='{{item.state}}') {{item.title}}

        li(ng-show='nav.isAdmin()', ui-sref-active='active')
          a(ui-sref='admin') Admin

      form.navbar-form.navbar-left.form-inline(role='Searcha', ng-submit='nav.submit(country,gend,lang,intr)')
          .form-group.navinput
             label.control-label Country
             input.form-control(type='text', name='country', size='10')

          .form-group.navinput
             label.control-label Gender
             select.form-control.input-sm(name='gend', ng-model='gend', ng-options='gend_item for gend_item in nav.genders')   

          .form-group.navinput(ng-show='isCurState("main")')
             label.control-label Language
             select.form-control.input-sm(name='lang', ng-model='lang', ng-options='lang_item for lang_item in nav.langs')

          .form-group.navinput
             label.control-label Interest
             input.form-control.input-sm(type='text', name='intr', size='10')

          .form-group.navinput
             button.btn.btn-success search

      ul.nav.navbar-nav.navbar-right
        li(ng-hide='nav.isLoggedIn()', ui-sref-active='active')
          oauth-buttons

        //li(ng-hide='nav.isLoggedIn()', ui-sref-active='active')
        //  a(ui-sref='login') Login

        li(ng-show='nav.isLoggedIn()')
          p.navbar-text Hello {{ nav.getCurrentUser().name }}

        li(ng-show='nav.isLoggedIn()', ui-sref-active='active')
          a(ui-sref='settings')
            span.glyphicon.glyphicon-cog

        li(ng-show='nav.isLoggedIn()')
          a(ui-sref='logout') Logout
