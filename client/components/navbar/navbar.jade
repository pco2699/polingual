div.navbar.navbar-default.navbar-static-top(ng-controller='NavbarController')
  div.container
    div.navbar-header
      button.navbar-toggle(type='button', ng-click='nav.isCollapsed = !nav.isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Polingual

    div#navbar-main.navbar-collapse.collapse(uib-collapse='nav.isCollapsed')
      ul.nav.navbar-nav
        li(ng-repeat='item in nav.menu', ui-sref-active='active')
          a(ui-sref='{{item.state}}') {{item.title}}

        li(ng-show='nav.isAdmin()', ui-sref-active='active')
          a(ui-sref='admin') Admin

      form.navbar-form.navbar-left.form-inline(ng-show='$root.dispSearch' role='Searcha', ng-submit='nav.submit(country,gend,lang,intr)')
          .form-group.navinput
             label.sr-only  Country
             input.form-control(type='text', name='country', placeholder='Country')

          .form-group.navinput
             label.sr-only Gender
             select(title='Gender').form-control(name='gend', ng-model='gend', ng-options='gend.value as gend.name for gend in nav.genders')

          .form-group.navinput
             label.sr-only Language
             select.form-control(name='lang', ng-model='lang', ng-options='lang.value as lang.name for lang in nav.langs', placeholder='Language')

          .form-group.navinput
             label.sr-only Interest
             input.form-control(type='text', name='intr', placeholder='Interest')

          .form-group.navinput
             button.btn.btn-success search

      ul.nav.navbar-nav.navbar-right
        li(ng-hide='nav.isLoggedIn()', ui-sref-active='active')
          oauth-buttons

        li(ng-show='nav.isLoggedIn()')
          p.navbar-text Hello {{ nav.getCurrentUser().name }}

        li(ng-show='nav.isLoggedIn()', ui-sref-active='active')
          a(ui-sref='settings')
            span.glyphicon.glyphicon-cog

        li(ng-show='nav.isLoggedIn()')
          a(ui-sref='logout') Logout
